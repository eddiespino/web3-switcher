{
    "manifest_version": 3,
    "name": "Web3Switcher",
    "version": "1.2",
    "description": "Easily switch between different Hive frontends to enhance your browsing experience.",
    "permissions": [
      "tabs"
    ],
    "action": {
      "default_icon": "icons/Web3Switcher.png",
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "*://hive.blog/*",
      "*://peakd.com/*",
      "*://ecency.com/*",
      "*://inleo.io/*"
    ]
}  
  
